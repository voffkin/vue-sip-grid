$columns ?= 12
$column ?= 74px
$maxWidth ?= 1400px
$gutter ?= 32px
$gutterPers = ($gutter / $maxWidth * 100) % // 20 / 1360 * 100

columnPercent(num)
  max-width ((num / $columns) * 100)%
  width 100%

columnPercentGutter(num)
  max-width ((num / $columns) * 100)% - $gutterPers * 0.51
  width 100%

columnFixedNoGutter(num)
  max-width ($maxWidth / $columns * num - 1)px
  width 100%

columnFixedGutter(num)
  max-width ($column * num + $gutter * (num - 1) - 1)
  width 100%

